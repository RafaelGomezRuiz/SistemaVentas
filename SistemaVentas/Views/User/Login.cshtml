@using SistemaVentas.Core.Application.ViewModels.Users;

@model LoginViewModel;

@{
    ViewData["Title"] = "Login";
}
<div class="container-fluid">
    <div class="col-6 offset-3">
        <div class="card shadow-sm">
            <div class="card-header">
                <h3 class="text-center ">Iniciar sesion</h3>
            </div>
            <div class="card-body">
                @if(Model.HasError){
                    <div class="bg-danger ">
                        <p class="text-white">@Model.ErrorDescription</p>

                    </div>
                }
                <form asp-controller="User" asp-action="login">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Correo:</label>
                        <input asp-for="Email" class="form-control"/>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Contrasenia</label>
                        <input asp-for="Password" class="form-control"/>
                    </div>

                    <button type="submit" class="btn btn-primary float-end">Iniciar Sesion</button>
                    @* <a asp-controller=""></a> *@
                </form>
            </div>
        </div>
    </div>
</div>
