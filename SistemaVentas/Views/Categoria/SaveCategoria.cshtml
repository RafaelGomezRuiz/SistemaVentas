@using SistemaVentas.Core.Application.ViewModels.Categories;

@model SaveCategoriaViewModel;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    bool editMode = Model.Id != 0 ? true : false;
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header">
                <h3>@(editMode == true ? $"Editando la categoria: {Model.Nombre}" : "Creando categoria")</h3>
            </div>
            <div class="card-body">
                <form asp-controller="Categoria" asp-action=@(editMode ? "Edit" : "Create")>
                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control"></input>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    
                    <input asp-for="Id" type="hidden"></input>
                    <div>
                        <a asp-controller="Categoria" asp-action="Index" class="btn btn-warning">Cancelar</a>
                        <button type="submit" class="btn btn-success">Crear</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
