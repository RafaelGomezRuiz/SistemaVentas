@using SistemaVentas.Core.Application.ViewModels.Categories;

@model SaveCategoriaViewModel;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

}


<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header">
                <h3>Estas seguro de eliminar la categoria '@Model.Nombre' ?</h3>
            </div>
            <div class="card-body">
                <form asp-controller="Categoria" asp-action="DeletePost">

                    <input asp-for="Id" type="hidden"></input>
                    <div>
                        <a asp-controller="Categoria" asp-action="Index" class="btn btn-warning">Cancelar</a>
                        <button type="submit" class="btn btn-danger">Borrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
